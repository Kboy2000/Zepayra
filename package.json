{
  "name": "zepayra-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=client\" \"npm run dev --workspace=server\"",
    "install:all": "npm install && npm install --workspace=client && npm install --workspace=server",
    "test": "npm test --workspace=server && npm test --workspace=client",
    "build": "npm run build --workspace=client"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
