{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "server/api-entry.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/api-entry.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1",
            "check": true
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/client/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}
